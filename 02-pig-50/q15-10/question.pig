-- 
u = LOAD 'data.csv' USING PigStorage(',') 
    AS (id:int, 
        firstname:CHARARRAY, 
        surname:CHARARRAY, 
        birthday:CHARARRAY, 
        color:CHARARRAY, 
        quantity:INT);
--
-- >>> Escriba su respuesta a partir de este punto <<<
--
BD = FILTER u by color MATCHES 'blue';
BD = FILTER BD by (firstname > 'Z');
BD = FOREACH BD GENERATE $1,$4;

--Dump BD;

