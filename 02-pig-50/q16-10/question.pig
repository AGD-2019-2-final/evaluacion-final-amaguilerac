--
u = LOAD 'data.csv' USING PigStorage(',') 
    AS (id:int, 
        firstname:CHARARRAY, 
        surname:CHARARRAY, 
        birthday:CHARARRAY, 
        color:CHARARRAY, 
        quantity:INT);
--
-- >>> Escriba su respuesta a partir de este punto <<<
--
BD = FILTER u by ((firstname > 'K') AND (firstname < 'L')) OR (color MATCHES 'blue');
BD = FOREACH BD GENERATE $1,$4;

--DUMP BD;

STORE BD INTO 'output' USING PigStorage(',');
