u = LOAD 'data.csv' USING PigStorage(',') 
    AS (id:int, 
        firstname:CHARARRAY, 
        surname:CHARARRAY, 
        birthday:CHARARRAY, 
        color:CHARARRAY, 
        quantity:INT);
--
-- >>> Escriba su respuesta a partir de este punto <<<
--
BD = FOREACH u GENERATE birthday AS c1;
BD = FOREACH BD GENERATE SUBSTRING (c1,0,4), SUBSTRING (c1,2,4);

